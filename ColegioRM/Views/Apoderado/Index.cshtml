@model IEnumerable<ColegioRM.ModelsE.Apoderado>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
<style>
    body {
        background-image: url("~/img/escudo.png");
        background-color: #93B874;
    }
</style>

    <h2>Lista de Apoderados</h2>
    <br />
    <div class="col-md-2 col-md-offset-10">
        <img src="~/img/escudo.png" class="img-fluid" alt="200px" width="100">

    </div>

    <p>
        @Html.ActionLink("Nuevo Apoderado", "Create")

    </p>
    <table class="table">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.codApoderado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.apPaterno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.apMaterno)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.nombres)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.correo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.dateNac)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.direccion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.sexo)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.codApoderado)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apPaterno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.apMaterno)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.nombres)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.correo)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.dateNac)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.direccion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.sexo)
                </td>
                <td>
                    @Html.ActionLink("Editar", "Edit", new { id = item.idApoderado }) |
                    @Html.ActionLink("Ver", "Details", new { id = item.idApoderado }) |
                    @Html.ActionLink("Eliminar", "Delete", new { id = item.idApoderado })
                </td>
            </tr>
        }

    </table>
</div>